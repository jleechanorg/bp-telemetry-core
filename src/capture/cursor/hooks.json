{
  "$schema": "https://cursor.sh/hooks-schema.json",
  "version": 1,
  "description": "Blueplane Telemetry Core - Cursor Global Hooks Configuration",
  "hooks": {
    "beforeSubmitPrompt": [
      {
        "command": "./hooks/before_submit_prompt.py"
      }
    ],
    "afterAgentResponse": [
      {
        "command": "./hooks/after_agent_response.py"
      }
    ],
    "beforeMCPExecution": [
      {
        "command": "./hooks/before_mcp_execution.py"
      }
    ],
    "afterMCPExecution": [
      {
        "command": "./hooks/after_mcp_execution.py"
      }
    ],
    "afterFileEdit": [
      {
        "command": "./hooks/after_file_edit.py"
      }
    ],
    "beforeShellExecution": [
      {
        "command": "./hooks/before_shell_execution.py"
      }
    ],
    "afterShellExecution": [
      {
        "command": "./hooks/after_shell_execution.py"
      }
    ],
    "beforeReadFile": [
      {
        "command": "./hooks/before_read_file.py"
      }
    ],
    "stop": [
      {
        "command": "./hooks/stop.py"
      }
    ]
  }
}
